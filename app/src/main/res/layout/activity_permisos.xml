    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:background="@android:drawable/alert_light_frame"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
